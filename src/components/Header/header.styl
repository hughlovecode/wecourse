.header
  height: 120px
  width: 100%
  position relative
  background-color rgb(241,243,245)
  .info
    height:80px
    width:100%
    border-bottom:2px solid #ccc
    overflow hidden
    .Img
      height:50px
      width:50px
      border-radius 50%
      float right
      margin 15px 30px
      overflow hidden
      .userImg
        height:50px
        min-width:50px
    .userName
      line-height 80px
      float:right
      padding-right 40px
  .status
    width 100%
    height 40px
    overflow hidden
    .statusPage
      line-height 40px
      margin-left 40px
    .loginstatus
      line-height 40px
      float right
      margin-right 40px
      margin-left 30px
    .systime
      float right
      line-height 40px
