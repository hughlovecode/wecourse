Leftwidth=256px
.all
  height: 100%
  width 100%
  position absolute
  .navLeft
    height:100%
    float left
    width Leftwidth
    background-color rgb(0,21,40)
  .right
    height:100%
    float left
    width "calc(100% - %s)" % Leftwidth
    background-color rgb(241,243,245)
    .header
      height:120px
    .container
      height calc(100% - 260px)
      min-width 700px
      display flex
      align-items center
      justify-content center
      margin 10px 40px 10px 40px
      border 1px solid #ccc
      box-shadow 5px 5px 5px #ccc
      background:white
      border-radius 5px
    .footer
      height:180px